<syslog xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-infra-syslog-cfg">
  <host-name-prefix>router</host-name-prefix>
  <suppress-duplicates/>
  <logging-facilities>
    <facility-level>local0</facility-level>
  </logging-facilities>
  <host-server>
    <vrfs>
      <vrf>
        <vrf-name>MGMT-PLANE</vrf-name>
        <ipv6s>
          <ipv6>
            <address>2001:db8::a:1</address>
            <ipv6-severity-port>
              <severity>6</severity>
            </ipv6-severity-port>
          </ipv6>
          <ipv6>
            <address>2001:db8::a:2</address>
            <ipv6-severity-port>
              <severity>6</severity>
            </ipv6-severity-port>
          </ipv6>
        </ipv6s>
      </vrf>
    </vrfs>
  </host-server>
  <ipv4>
    <tos>
      <type>dscp</type>
      <dscp>cs2</dscp>
    </tos>
  </ipv4>
  <source-interface-table>
    <source-interface-values>
      <source-interface-value>
        <src-interface-name-value>Loopback0</src-interface-name-value>
        <source-interface-vrfs>
          <source-interface-vrf>
            <vrf-name>default</vrf-name>
          </source-interface-vrf>
        </source-interface-vrfs>
      </source-interface-value>
    </source-interface-values>
  </source-interface-table>
</syslog>

