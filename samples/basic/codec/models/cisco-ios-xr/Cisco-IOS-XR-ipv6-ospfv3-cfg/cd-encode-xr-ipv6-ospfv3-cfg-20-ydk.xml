<ospfv3 xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ipv6-ospfv3-cfg">
  <processes>
    <process>
      <process-name>DEFAULT</process-name>
      <default-vrf>
        <router-id>172.16.255.1</router-id>
        <area-addresses>
          <area-area-id>
            <area-id>0</area-id>
            <enable/>
            <interfaces>
              <interface>
                <interface-name>Loopback0</interface-name>
                <enable/>
                <passive>true</passive>
              </interface>
              <interface>
                <interface-name>GigabitEthernet0/0/0/0</interface-name>
                <enable/>
                <network>point-to-point</network>
              </interface>
            </interfaces>
          </area-area-id>
        </area-addresses>
      </default-vrf>
    </process>
  </processes>
</ospfv3>