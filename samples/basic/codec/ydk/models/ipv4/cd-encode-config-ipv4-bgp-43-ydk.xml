<bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ipv4-bgp-cfg">
  <instance>
    <instance-name>default</instance-name>
    <instance-as>
      <as>0</as>
      <four-byte-as>
        <as>65001</as>
        <bgp-running></bgp-running>
        <default-vrf>
          <bgp-entity>
            <neighbor-groups>
              <neighbor-group>
                <neighbor-group-name>IBGP</neighbor-group-name>
                <create></create>
                <neighbor-group-afs>
                  <neighbor-group-af>
                    <af-name>ipv6-unicast</af-name>
                    <activate></activate>
                    <route-policy-out>POLICY2</route-policy-out>
                  </neighbor-group-af>
                </neighbor-group-afs>
                <remote-as>
                  <as-xx>0</as-xx>
                  <as-yy>65001</as-yy>
                </remote-as>
                <update-source-interface>Loopback0</update-source-interface>
              </neighbor-group>
            </neighbor-groups>
            <neighbors>
              <neighbor>
                <neighbor-address>2001:db8::ff:2</neighbor-address>
                <neighbor-group-add-member>IBGP</neighbor-group-add-member>
              </neighbor>
            </neighbors>
          </bgp-entity>
          <global>
            <global-afs>
              <global-af>
                <af-name>ipv6-unicast</af-name>
                <enable></enable>
              </global-af>
            </global-afs>
          </global>
        </default-vrf>
      </four-byte-as>
    </instance-as>
  </instance>
</bgp>

