<network-instances xmlns="http://openconfig.net/yang/network-instance">
  <network-instance>
    <name>default</name>
    <config>
      <name>default</name>
    </config>
    <mpls>
      <te-global-attributes>
        <mpls-admin-groups>
          <admin-group>
            <admin-group-name>RED</admin-group-name>
            <config>
              <admin-group-name>RED</admin-group-name>
              <bit-position>0</bit-position>
            </config>
          </admin-group>
          <admin-group>
            <admin-group-name>BLUE</admin-group-name>
            <config>
              <admin-group-name>BLUE</admin-group-name>
              <bit-position>1</bit-position>
            </config>
          </admin-group>
        </mpls-admin-groups>
      </te-global-attributes>
      <te-interface-attributes>
        <interface>
          <interface-id>GigabitEthernet0/0/0/1</interface-id>
          <config>
            <interface-id>GigabitEthernet0/0/0/1</interface-id>
            <admin-group>RED</admin-group>
            <admin-group>BLUE</admin-group>
          </config>
        </interface>
      </te-interface-attributes>
    </mpls>
  </network-instance>
</network-instances>
