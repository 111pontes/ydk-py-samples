<syslog xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-infra-syslog-cfg">
  <host-name-prefix>router</host-name-prefix>
  <host-server>
    <vrfs>
      <vrf>
        <vrf-name>default</vrf-name>
        <ipv4s>
          <ipv4>
            <address>10.0.0.1</address>
            <ipv4-severity-port>
              <severity>6</severity>
            </ipv4-severity-port>
          </ipv4>
          <ipv4>
            <address>10.0.0.2</address>
            <ipv4-severity-port>
              <severity>6</severity>
            </ipv4-severity-port>
          </ipv4>
        </ipv4s>
      </vrf>
    </vrfs>
  </host-server>
  <ipv4>
    <tos>
      <dscp>cs2</dscp>
    </tos>
  </ipv4>
  <logging-facilities>
    <facility-level>local0</facility-level>
  </logging-facilities>
  <source-interface-table>
    <source-interface-values>
      <source-interface-value>
        <src-interface-name-value>Loopback0</src-interface-name-value>
        <source-interface-vrfs>
          <source-interface-vrf>
            <vrf-name>default</vrf-name>
          </source-interface-vrf>
        </source-interface-vrfs>
      </source-interface-value>
    </source-interface-values>
  </source-interface-table>
  <suppression xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-infra-correlator-cfg">
    <rules>
      <rule>
        <name>duplicates</name>
      </rule>
    </rules>
  </suppression>
</syslog>

